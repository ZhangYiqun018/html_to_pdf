# 服务器配置
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# 目录配置
OUTPUT_DIR=output
UPLOAD_DIR=uploads

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 其他配置
MAX_UPLOAD_SIZE=10mb

# 可选：html-pdf配置
PDF_FORMAT=A4
PDF_QUALITY=100
RENDER_DELAY=1000

# 可选：Claude API密钥（如果实现了Claude集成）
# CLAUDE_API_KEY=your_claude_api_key_here 

# 鉴权配置
API_KEY_REQUIRED=true
API_KEYS=your_api_key_1,your_api_key_2
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_AUTH_REQUIRED=false

# 速率限制配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX=100  # 每个IP在windowMs时间内最多可以发送100个请求
API_RATE_LIMIT_WINDOW_MS=300000  # 5分钟
API_RATE_LIMIT_MAX=20  # 每个IP在windowMs时间内最多可以发送20个API请求

# 配额限制配置
QUOTA_LIMIT_REQUIRED=true
MONTHLY_QUOTA=1000  # 每个API密钥每月可以使用的请求数

# IP白名单配置
IP_WHITELIST_REQUIRED=false
WHITELISTED_IPS=127.0.0.1,::1,192.168.1.100 